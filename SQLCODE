#Mostrar cidade de pais com codigo 'ABW'
SELECT * FROM city WHERE Code = 'PRT';
#Mostrar o nome da cidade, populaçao e nome do pais com código ABW
SELECT C.Name, C.Population, T.Name AS 'Country'
FROM city C, country T
WHERE C.Code = T.code
AND T.Code = 'USA';
